<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin" >

        <ImageView
            android:id="@+id/new_message_image_contact"
            android:layout_width="?android:attr/listPreferredItemHeight"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_marginRight="@dimen/margin"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_contact_image"
            android:scaleType="centerCrop"
            android:src="@drawable/contactpickerclick" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/new_message_text_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/unknown_contact"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/new_message_text_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown_number"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_message_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.80" >
    </android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ECECEC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:paddingBottom="@dimen/margin_small" >

        <org.easysms.android.ui.KaraokeLayout
            android:id="@+id/view_message_karaoke_compose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/view_message_button_send" >
        </org.easysms.android.ui.KaraokeLayout>

        <ImageButton
            android:id="@+id/view_message_button_send"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/description_contact_image"
            android:src="@drawable/ic_action_send" />
    </RelativeLayout>

</LinearLayout>